{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/paytm/generate-token.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    },
    "api/paytm/callback.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    }
  }
}
